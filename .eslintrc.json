{
    "rules": {
        "no-console": 0,
        "no-irregular-whitespace": 0,
        "quotes": [
            2,
            "double"
        ],
        "linebreak-style": [
            2,
            "unix"
        ],
        "semi": [
            2,
            "always"
        ]
    },
    "env": {
        "es6": true,
        "node": true,
        "mocha": true
    },
    "ecmaFeatures": { 
        "modules": true,
        "classes": true
    },
    "extends": "eslint:recommended"
}